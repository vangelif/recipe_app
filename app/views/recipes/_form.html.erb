<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @recipe, local: true, turbo: false) do |f| %>
        <div class="form-group mb-2">
          <%= f.label :name, "Recipe's Name" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :preparation_time, "Preparation Time" %>
          <%= f.number_field :preparation_time, class: 'form-control', placeholder: '..in minutes' %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :cooking_time, "Cooking Time" %>
          <%= f.number_field :cooking_time, class: 'form-control', placeholder: '..in minutes' %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :description, "Description" %>
          <%= f.text_area :description, class: 'form-control', rows: 3 %>
        </div>

        <div class="form-group mb-2">
          <div class="form-check">
            <%= f.check_box :public, class: 'form-check-input' %>
            <%= f.label :public, class: "form-check-label" %>
          </div>
        </div>

        <div class="form-group mb-2 text-center">
          <%= f.submit 'Save', class: 'btn btn-warning' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
